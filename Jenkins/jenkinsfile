pipeline {
    agent {
        node {
            label 'maven'
        }
    }
environment {
    PATH = "/opt/apache-maven-3.9.4/bin:$PATH"
}
    stages {
        stage {
            sh 'mvn clean deploy'
        }
    }

}
    stage('SonarQube analysis') {
    environment {
      scannerHome = tool 'galaxy-sonar-scanner';
    }
    steps{
    
    withSonarQuebEnv('galaxy-sonarqube-server'){
        sh "${scannerHome}/bin/sonar-scanner"
    }
    }
    }